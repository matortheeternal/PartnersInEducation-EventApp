<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/pieLoginLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:paddingBottom="200dp"
        android:src="@drawable/logo" />

    <Button
        android:id="@+id/checkinToEventsButton"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:minHeight="5dp"
        android:onClick="toEvents"
        android:text="@string/toEvents"
        android:textSize="12sp" />

    <ToggleButton
        android:id="@+id/checkinToggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/checkinToEventsButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="94dp"
        android:checked="false"
        android:onClick="toggleCheckIn"
        android:padding="30dp"
        android:textOff="@string/checkinOn"
        android:textOn="@string/checkinOff"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/startTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/checkinToEventsButton"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="33dp"
        android:layout_marginLeft="51dp"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/stopTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/checkinToEventsButton"
        android:layout_marginBottom="32dp"
        android:layout_toLeftOf="@+id/checkinToEventsButton"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/thankyou"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/checkinToggle"
        android:layout_alignBottom="@+id/checkinToggle"
        android:layout_centerHorizontal="true"
        android:text="@string/thankyou"
        android:gravity="center"
        android:textSize="50sp"
        android:visibility="invisible" />

</RelativeLayout>
